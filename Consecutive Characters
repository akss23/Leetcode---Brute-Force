class Solution {
public:
    int maxPower(string s) {
        int n=s.size();
        int cnt=1,ans=1;
        for(int i=1;i<n;i++){
           if(s[i] == s[i-1]) {
              cnt++;
              ans=max(ans,cnt);
           }
           else {
            cnt=1;
            ans=max(ans,cnt);
           }
        }
        return ans;
    }
};
