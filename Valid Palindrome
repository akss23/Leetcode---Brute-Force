class Solution {
public:
    bool isPalindrome(string s) {
        int n=s.size();
        
        string l;
        for(int i=0;i<n;i++){
            if(!isalnum(s[i])) continue;
            if(isupper(s[i])){
                s[i]=tolower(s[i]);
                l.push_back(s[i]);
            }
            else l.push_back(s[i]);
        }
        int newl=l.size();
        for(int i=0;i<newl/2;i++){
            if(l[i] != l[newl-1-i]) return false;
        }
        
        return true;
    }
};
